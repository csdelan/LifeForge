        color: #212529;
    }

    .badge {
        padding: 0.4rem 0.75rem;
        font-size: 0.75rem;
        font-weight: 600;
        border-radius: 6px;
        color: #ffffff;
    }

    .bg-primary {
        background-color: #0d6efd !important;
    }

    .bg-success {
        background-color: #198754 !important;
    }

    .bg-danger {
        background-color: #dc3545 !important;
    }

    .bg-secondary {
        background-color: #6c757d !important;
    }

    .rewards-list {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .reward-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
        padding: 0.35rem 0.6rem;
        border-radius: 6px;
        font-size: 0.8rem;
