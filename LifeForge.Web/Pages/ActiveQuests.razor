        background: #f8f9fa;
    }

    .quest-runs-table thead th {
        color: #212529;
        font-weight: 600;
        padding: 1rem;
        border: none;
        border-bottom: 2px solid #dee2e6;
    }

    .quest-runs-table tbody td {
        color: #212529;
        padding: 1rem;
        vertical-align: middle;
        border-top: 1px solid #dee2e6;
        background-color: #ffffff;
    }

