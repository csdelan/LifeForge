@page "/quests"
@using LifeForge.Web.Models
@using LifeForge.Web.Services
@using LifeForge.Domain
@inject QuestService QuestService
@inject QuestRunService QuestRunService
@inject IJSRuntime JSRuntime

<PageTitle>Quest Manager</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Quest Manager</h1>
    <div>
        <a href="/active-quests" class="btn btn-success me-2">
            <span class="bi bi-play-circle"></span> Active Quests
        </a>
        <button class="btn btn-primary" @onclick="ShowCreateModal">
            <span class="bi bi-plus-circle"></span> Create New Quest
        </button>
    </div>
</div>

@if (isLoading)
{
    <p><em>Loading quests...</em></p>
}
else if (quests == null || !quests.Any())
{
    <div class="alert alert-info">
        No quests available. Create your first quest to get started!
    </div>
}
else
{
    <div class="quest-gallery">
        @foreach (var quest in quests)
        {
            <div class="quest-card">
                <div class="quest-card-image" @onclick="() => ShowEditModal(quest)">
                    @if (!string.IsNullOrEmpty(quest.ImageData))
                    {
                        <img src="@GetImageDataUrl(quest.ImageData, quest.ImageContentType)" alt="@quest.Name" />
                    }
                    else
                    {
                        <div class="quest-card-placeholder">
                            <span class="bi bi-image"></span>
                        </div>
                    }
                </div>
                <div class="quest-card-content">
                    <h3 class="quest-card-title">@quest.Name</h3>
                    <p class="quest-card-description">@(string.IsNullOrEmpty(quest.Description) ? "No description" : quest.Description)</p>
                    @if (quest.Rewards.Any())
                    {
                        <div class="quest-rewards-preview">
                            <small class="text-muted">Rewards:</small>
                            <div class="rewards-preview-list">
                                @foreach (var reward in quest.Rewards)
                                {
                                    <span class="reward-preview-badge">
                                        @if (!string.IsNullOrEmpty(reward.Icon))
                                        {
                                            <span class="reward-icon">@reward.Icon</span>
                                        }
                                        @reward.Amount
                                    </span>
                                }
                            </div>
                        </div>
                    }
                    <div class="quest-card-footer">
                        <span class="badge @GetDifficultyBadgeClass(quest.Difficulty)">
                            @quest.Difficulty
                        </span>
                        <span class="quest-repeatability">
                            <span class="bi bi-arrow-repeat"></span> @quest.Repeatability
                        </span>
                    </div>
                </div>
                <div class="quest-card-actions" @onclick:stopPropagation="true">
                    <button class="btn btn-sm btn-success" @onclick="() => StartQuest(quest)" title="Start Quest">
                        <span class="bi bi-play-fill"></span>
                    </button>
                    <button class="btn btn-sm btn-outline-secondary" @onclick="() => ShowEditModal(quest)" title="Edit">
                        <span class="bi bi-pencil"></span>
                    </button>
                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteQuest(quest.Id!)" title="Delete">
                        <span class="bi bi-trash"></span>
                    </button>
                </div>
            </div>
        }
    </div>
}

@if (showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content custom-modal">
                <div class="modal-header">
                    <h5 class="modal-title">@(isEditMode ? "Edit Quest" : "Create New Quest")</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="currentQuest" OnValidSubmit="SaveQuest">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <InputText class="form-control" @bind-Value="currentQuest.Name" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <InputTextArea class="form-control" rows="3" @bind-Value="currentQuest.Description" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Difficulty</label>
                            <InputSelect class="form-select" @bind-Value="currentQuest.Difficulty">
                                @foreach (DifficultyLevel difficulty in Enum.GetValues(typeof(DifficultyLevel)))
                                {
                                    <option value="@difficulty">@difficulty</option>
                                }
                            </InputSelect>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Repeatability</label>
                            <InputSelect class="form-select" @bind-Value="currentQuest.Repeatability">
                                @foreach (QuestRepeatability repeatability in Enum.GetValues(typeof(QuestRepeatability)))
                                {
                                    <option value="@repeatability">@repeatability</option>
                                }
                            </InputSelect>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Quest Image</label>
                            <InputFile class="form-control" OnChange="HandleImageUpload" accept="image/*" />
                            @if (isUploading)
                            {
                                <small class="text-muted">Uploading image...</small>
                            }
                            @if (!string.IsNullOrEmpty(currentQuest.ImageData))
                            {
                                <div class="mt-2">
                                    <img src="@GetImageDataUrl(currentQuest.ImageData, currentQuest.ImageContentType)" alt="Preview" style="max-width: 200px; max-height: 200px; border-radius: 8px;" />
                                </div>
                            }
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Rewards</label>
                            <div class="rewards-config">
                                @foreach (var reward in currentQuest.Rewards)
                                {
                                    <div class="reward-item-config">
                                        <select class="form-select form-select-sm reward-select" value="@reward.RewardClass" @onchange="e => OnRewardSelected(reward, e.Value?.ToString() ?? string.Empty)">
                                            <option value="">Select Reward...</option>
                                            @foreach (var rewardDef in RewardDefinition.GetAvailableRewards())
                                            {
                                                <option value="@rewardDef.RewardClass">@rewardDef.Icon @rewardDef.Name</option>
                                            }
                                        </select>
                                        <input type="number" class="form-control form-control-sm" placeholder="Amount" @bind="reward.Amount" min="1" />
                                        <button type="button" class="btn btn-sm btn-danger" @onclick="() => RemoveReward(reward)">
                                            <span class="bi bi-trash"></span>
                                        </button>
                                    </div>
                                }
                                <button type="button" class="btn btn-sm btn-success mt-2" @onclick="AddReward">
                                    <span class="bi bi-plus-circle"></span> Add Reward
                                </button>
                            </div>
                            <small class="text-muted">Configure rewards for completing this quest.</small>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                            <button type="submit" class="btn btn-primary" disabled="@isUploading">
                                @(isEditMode ? "Update" : "Create") Quest
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
        @errorMessage
        <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
    </div>
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        @successMessage
        <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
    </div>
}

