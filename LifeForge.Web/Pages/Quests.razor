</style>

@code {
    private List<QuestDto> quests = new();
    private QuestDto currentQuest = new();
    private bool showModal = false;
    private bool isEditMode = false;
    private bool isLoading = true;
    private bool isUploading = false;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadQuests();
    }

    private async Task LoadQuests()
    {
        try
        {
            isLoading = true;
            quests = await QuestService.GetAllQuestsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load quests: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task StartQuest(QuestDto quest)
    {
        try
        {
            var questRun = await QuestRunService.StartQuestRunAsync(quest.Id!);
            if (questRun != null)
            {
                successMessage = $"Quest '{quest.Name}' started! Good luck!";
            }
            else
            {
                errorMessage = "Failed to start quest";
            }
        }
        catch (HttpRequestException ex) when (ex.StatusCode == System.Net.HttpStatusCode.Conflict)
        {
            errorMessage = $"Quest '{quest.Name}' is already in progress. Complete or cancel it before starting a new instance.";
        }
        catch (Exception ex)
        {
            errorMessage = $"Error starting quest: {ex.Message}";
        }
    }

    private void ShowCreateModal()
    {
        currentQuest = new QuestDto 
        { 
            Difficulty = DifficultyLevel.Medium, 
            Repeatability = QuestRepeatability.OneTime,
            Rewards = new List<RewardDto>()
        };
        isEditMode = false;
        showModal = true;
        errorMessage = null;
        successMessage = null;
    }

    private void ShowEditModal(QuestDto quest)
    {
        currentQuest = new QuestDto
        {
            Id = quest.Id,
            Name = quest.Name,
            ImageName = quest.ImageName,
            ImageData = quest.ImageData,
            ImageContentType = quest.ImageContentType,
            Description = quest.Description,
            Difficulty = quest.Difficulty,
            Repeatability = quest.Repeatability,
            Rewards = quest.Rewards.Select(r => new RewardDto
            {
                Type = r.Type,
                RewardClass = r.RewardClass,
                Amount = r.Amount,
                Icon = r.Icon
            }).ToList()
        };
        isEditMode = true;
        showModal = true;
        errorMessage = null;
        successMessage = null;
    }

    private void CloseModal()
    {
        showModal = false;
        currentQuest = new();
    }

    private void AddReward()
    {
        currentQuest.Rewards.Add(new RewardDto
        {
            Type = RewardType.Currency,
            RewardClass = "",
            Amount = 10,
            Icon = ""
        });
    }

    private void OnRewardSelected(RewardDto reward, string rewardClass)
    {
        reward.RewardClass = rewardClass;
        var rewardDef = RewardDefinition.GetByRewardClass(rewardClass);
        if (rewardDef != null)
        {
            reward.Type = rewardDef.Type;
            reward.Icon = rewardDef.Icon;
        }
        StateHasChanged();
    }

    private void UpdateRewardFromClass(RewardDto reward)
    {
        var rewardDef = RewardDefinition.GetByRewardClass(reward.RewardClass);
        if (rewardDef != null)
        {
            reward.Type = rewardDef.Type;
            reward.Icon = rewardDef.Icon;
            reward.RewardClass = rewardDef.RewardClass;
        }
    }

    private void RemoveReward(RewardDto reward)
    {
        currentQuest.Rewards.Remove(reward);
    }

    private async Task HandleImageUpload(InputFileChangeEventArgs e)
    {
        try
        {
            isUploading = true;
            var file = e.File;
            var uploadResult = await QuestService.UploadImageAsync(file);
            if (uploadResult != null)
            {
                currentQuest.ImageName = uploadResult.FileName;
                currentQuest.ImageData = uploadResult.ImageData;
                currentQuest.ImageContentType = uploadResult.ContentType;
            }
            else
            {
                errorMessage = "Failed to upload image";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error uploading image: {ex.Message}";
        }
        finally
        {
            isUploading = false;
        }
    }

    private async Task SaveQuest()
    {
        try
        {
            if (isEditMode)
            {
                var success = await QuestService.UpdateQuestAsync(currentQuest.Id!, currentQuest);
                if (success)
                {
                    successMessage = "Quest updated successfully!";
                    await LoadQuests();
                    CloseModal();
                }
                else
                {
                    errorMessage = "Failed to update quest";
                }
            }
            else
            {
                var created = await QuestService.CreateQuestAsync(currentQuest);
                if (created != null)
                {
                    successMessage = "Quest created successfully!";
                    await LoadQuests();
                    CloseModal();
                }
                else
                {
                    errorMessage = "Failed to create quest";
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving quest: {ex.Message}";
        }
    }

    private async Task DeleteQuest(string id)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this quest?"))
        {
            return;
        }

        try
        {
            var success = await QuestService.DeleteQuestAsync(id);
            if (success)
            {
                successMessage = "Quest deleted successfully!";
                await LoadQuests();
            }
            else
            {
                errorMessage = "Failed to delete quest";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting quest: {ex.Message}";
        }
    }

    private string GetImageDataUrl(string? imageData, string? contentType)
    {
        if (string.IsNullOrEmpty(imageData))
            return string.Empty;
        
        var mimeType = !string.IsNullOrEmpty(contentType) ? contentType : "image/jpeg";
        return $"data:{mimeType};base64,{imageData}";
    }

    private string GetDifficultyBadgeClass(DifficultyLevel difficulty)
    {
        return difficulty switch
        {
            DifficultyLevel.Trivial => "bg-secondary",
            DifficultyLevel.Easy => "bg-success",
            DifficultyLevel.Medium => "bg-primary",
            DifficultyLevel.Hard => "bg-warning",
            DifficultyLevel.CrazyHard => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
