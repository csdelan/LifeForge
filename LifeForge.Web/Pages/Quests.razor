@page "/quests"
@using LifeForge.Web.Models
@using LifeForge.Web.Services
@using LifeForge.Domain
@inject QuestService QuestService
@inject IJSRuntime JSRuntime

<PageTitle>Quest Manager</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Quest Manager</h1>
    <button class="btn btn-primary" @onclick="ShowCreateModal">
        <span class="bi bi-plus-circle"></span> Create New Quest
    </button>
</div>

@if (isLoading)
{
    <p><em>Loading quests...</em></p>
}
else if (quests == null || !quests.Any())
{
    <div class="alert alert-info">
        No quests available. Create your first quest to get started!
    </div>
}
else
{
    <div class="quest-gallery">
        @foreach (var quest in quests)
        {
            <div class="quest-card" @onclick="() => ShowEditModal(quest)">
                <div class="quest-card-image">
                    @if (!string.IsNullOrEmpty(quest.ImageData))
                    {
                        <img src="@GetImageDataUrl(quest.ImageData, quest.ImageContentType)" alt="@quest.Name" />
                    }
                    else
                    {
                        <div class="quest-card-placeholder">
                            <span class="bi bi-image"></span>
                        </div>
                    }
                </div>
                <div class="quest-card-content">
                    <h3 class="quest-card-title">@quest.Name</h3>
                    <p class="quest-card-description">@(string.IsNullOrEmpty(quest.Description) ? "No description" : quest.Description)</p>
                    <div class="quest-card-footer">
                        <span class="badge @GetDifficultyBadgeClass(quest.Difficulty)">
                            @quest.Difficulty
                        </span>
                        <span class="quest-repeatability">
                            <span class="bi bi-arrow-repeat"></span> @quest.Repeatability
                        </span>
                    </div>
                </div>
                <div class="quest-card-actions" @onclick:stopPropagation="true">
                    <button class="btn btn-sm btn-outline-secondary" @onclick="() => ShowEditModal(quest)" title="Edit">
                        <span class="bi bi-pencil"></span>
                    </button>
                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteQuest(quest.Id!)" title="Delete">
                        <span class="bi bi-trash"></span>
                    </button>
                </div>
            </div>
        }
    </div>
}

@if (showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(isEditMode ? "Edit Quest" : "Create New Quest")</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="currentQuest" OnValidSubmit="SaveQuest">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <InputText class="form-control" @bind-Value="currentQuest.Name" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <InputTextArea class="form-control" rows="3" @bind-Value="currentQuest.Description" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Difficulty</label>
                            <InputSelect class="form-select" @bind-Value="currentQuest.Difficulty">
                                @foreach (DifficultyLevel difficulty in Enum.GetValues(typeof(DifficultyLevel)))
                                {
                                    <option value="@difficulty">@difficulty</option>
                                }
                            </InputSelect>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Repeatability</label>
                            <InputSelect class="form-select" @bind-Value="currentQuest.Repeatability">
                                @foreach (QuestRepeatability repeatability in Enum.GetValues(typeof(QuestRepeatability)))
                                {
                                    <option value="@repeatability">@repeatability</option>
                                }
                            </InputSelect>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Quest Image</label>
                            <InputFile class="form-control" OnChange="HandleImageUpload" accept="image/*" />
                            @if (isUploading)
                            {
                                <small class="text-muted">Uploading image...</small>
                            }
                            @if (!string.IsNullOrEmpty(currentQuest.ImageData))
                            {
                                <div class="mt-2">
                                    <img src="@GetImageDataUrl(currentQuest.ImageData, currentQuest.ImageContentType)" alt="Preview" style="max-width: 200px; max-height: 200px; border-radius: 8px;" />
                                </div>
                            }
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                            <button type="submit" class="btn btn-primary" disabled="@isUploading">
                                @(isEditMode ? "Update" : "Create") Quest
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
        @errorMessage
        <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
    </div>
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        @successMessage
        <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
    </div>
}

<style>
    .quest-gallery {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 1.5rem;
        margin-top: 1.5rem;
    }

    .quest-card {
        background: #2d2d2d;
        border-radius: 12px;
        overflow: hidden;
        cursor: pointer;
        transition: transform 0.2s, box-shadow 0.2s;
        position: relative;
        display: flex;
        flex-direction: column;
    }

    .quest-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
    }

    .quest-card-image {
        width: 100%;
        height: 200px;
        overflow: hidden;
        background: #1a1a1a;
        position: relative;
    }

    .quest-card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .quest-card-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        color: #555;
    }

    .quest-card-content {
        padding: 1.25rem;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .quest-card-title {
        font-size: 1.25rem;
        font-weight: 600;
        margin: 0 0 0.75rem 0;
        color: #fff;
        line-height: 1.3;
    }

    .quest-card-description {
        font-size: 0.9rem;
        color: #aaa;
        margin: 0 0 1rem 0;
        line-height: 1.5;
        flex: 1;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .quest-card-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .quest-repeatability {
        font-size: 0.85rem;
        color: #888;
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }

    .quest-card-actions {
        position: absolute;
        top: 0.75rem;
        right: 0.75rem;
        display: flex;
        gap: 0.5rem;
        opacity: 0;
        transition: opacity 0.2s;
    }

    .quest-card:hover .quest-card-actions {
        opacity: 1;
    }

    .quest-card-actions .btn {
        background: rgba(255, 255, 255, 0.95);
        border: none;
        padding: 0.4rem 0.6rem;
        border-radius: 6px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    }

    .quest-card-actions .btn:hover {
        background: rgba(255, 255, 255, 1);
        transform: scale(1.05);
    }

    .badge {
        padding: 0.4rem 0.75rem;
        font-size: 0.75rem;
        font-weight: 600;
        border-radius: 6px;
    }

    @@media (max-width: 768px) {
        .quest-gallery {
            grid-template-columns: 1fr;
        }
        
        .quest-card-actions {
            opacity: 1;
        }
    }
</style>

@code {
    private List<QuestDto> quests = new();
    private QuestDto currentQuest = new();
    private bool showModal = false;
    private bool isEditMode = false;
    private bool isLoading = true;
    private bool isUploading = false;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadQuests();
    }

    private async Task LoadQuests()
    {
        try
        {
            isLoading = true;
            quests = await QuestService.GetAllQuestsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load quests: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowCreateModal()
    {
        currentQuest = new QuestDto { Difficulty = DifficultyLevel.Medium, Repeatability = QuestRepeatability.OneTime };
        isEditMode = false;
        showModal = true;
        errorMessage = null;
        successMessage = null;
    }

    private void ShowEditModal(QuestDto quest)
    {
        currentQuest = new QuestDto
        {
            Id = quest.Id,
            Name = quest.Name,
            ImageName = quest.ImageName,
            ImageData = quest.ImageData,
            ImageContentType = quest.ImageContentType,
            Description = quest.Description,
            Difficulty = quest.Difficulty,
            Repeatability = quest.Repeatability
        };
        isEditMode = true;
        showModal = true;
        errorMessage = null;
        successMessage = null;
    }

    private void CloseModal()
    {
        showModal = false;
        currentQuest = new();
    }

    private async Task HandleImageUpload(InputFileChangeEventArgs e)
    {
        try
        {
            isUploading = true;
            var file = e.File;
            var uploadResult = await QuestService.UploadImageAsync(file);
            if (uploadResult != null)
            {
                currentQuest.ImageName = uploadResult.FileName;
                currentQuest.ImageData = uploadResult.ImageData;
                currentQuest.ImageContentType = uploadResult.ContentType;
            }
            else
            {
                errorMessage = "Failed to upload image";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error uploading image: {ex.Message}";
        }
        finally
        {
            isUploading = false;
        }
    }

    private async Task SaveQuest()
    {
        try
        {
            if (isEditMode)
            {
                var success = await QuestService.UpdateQuestAsync(currentQuest.Id!, currentQuest);
                if (success)
                {
                    successMessage = "Quest updated successfully!";
                    await LoadQuests();
                    CloseModal();
                }
                else
                {
                    errorMessage = "Failed to update quest";
                }
            }
            else
            {
                var created = await QuestService.CreateQuestAsync(currentQuest);
                if (created != null)
                {
                    successMessage = "Quest created successfully!";
                    await LoadQuests();
                    CloseModal();
                }
                else
                {
                    errorMessage = "Failed to create quest";
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving quest: {ex.Message}";
        }
    }

    private async Task DeleteQuest(string id)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this quest?"))
        {
            return;
        }

        try
        {
            var success = await QuestService.DeleteQuestAsync(id);
            if (success)
            {
                successMessage = "Quest deleted successfully!";
                await LoadQuests();
            }
            else
            {
                errorMessage = "Failed to delete quest";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting quest: {ex.Message}";
        }
    }

    private string GetImageDataUrl(string? imageData, string? contentType)
    {
        if (string.IsNullOrEmpty(imageData))
            return string.Empty;
        
        var mimeType = !string.IsNullOrEmpty(contentType) ? contentType : "image/jpeg";
        return $"data:{mimeType};base64,{imageData}";
    }

    private string GetDifficultyBadgeClass(DifficultyLevel difficulty)
    {
        return difficulty switch
        {
            DifficultyLevel.Trivial => "bg-secondary",
            DifficultyLevel.Easy => "bg-success",
            DifficultyLevel.Medium => "bg-primary",
            DifficultyLevel.Hard => "bg-warning",
            DifficultyLevel.CrazyHard => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
