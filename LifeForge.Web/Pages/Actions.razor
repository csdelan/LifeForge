@page "/actions"
@using LifeForge.Web.Models
@using LifeForge.Web.Services
@using LifeForge.Domain
@inject ActionService ActionService
@inject BuffService BuffService
@inject CharacterService CharacterService
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable

<PageTitle>Action Manager</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Action Manager</h1>
    <button class="btn btn-primary" @onclick="ShowCreateModal">
        <span class="bi bi-plus-circle"></span> Create New Action
    </button>
</div>

@if (isLoading)
{
    <p><em>Loading actions...</em></p>
}
else if (actions == null || !actions.Any())
{
    <div class="alert alert-info">
        No actions available. Create your first action to get started!
    </div>
}
else
{
    <div class="action-gallery">
        @foreach (var action in actions)
        {
            <div class="action-card" @onclick="() => ShowEditModal(action)">
                <div class="action-card-image">
                    @if (!string.IsNullOrEmpty(action.ImageData))
                    {
                        <img src="@GetImageDataUrl(action.ImageData, action.ImageContentType)" alt="@action.Name" />
                    }
                    else if (!string.IsNullOrEmpty(action.Icon))
                    {
                        <div class="action-card-icon">@action.Icon</div>
                    }
                    else
                    {
                        <div class="action-card-placeholder">
                            <span class="bi bi-lightning-charge"></span>
                        </div>
                    }
                </div>
                <div class="action-card-content">
                    <h3 class="action-card-title">@action.Name</h3>
                    <p class="action-card-description">@(string.IsNullOrEmpty(action.Description) ? "No description" : action.Description)</p>
                    <div class="action-card-footer">
                        <span class="badge bg-info">@action.Category</span>
                        @if (action.BuffIds.Any())
                        {
                            <span class="action-buffs">
                                <span class="bi bi-stars"></span> @action.BuffIds.Count @(action.BuffIds.Count == 1 ? "Buff" : "Buffs")
                            </span>
                        }
                        @if (action.CooldownHours > 0)
                        {
                            <span class="action-cooldown">
                                <span class="bi bi-clock"></span> @action.CooldownHours h
                            </span>
                        }
                    </div>
                </div>
                <div class="action-card-actions" @onclick:stopPropagation="true">
                    <button class="btn btn-sm btn-execute" @onclick="() => ExecuteAction(action)" title="Execute this action">
                        <span class="bi bi-play-fill"></span>
                        <span class="btn-label">Execute</span>
                    </button>
                    <button class="btn btn-sm btn-edit" @onclick="() => ShowEditModal(action)" title="Edit action settings">
                        <span class="bi bi-pencil"></span>
                        <span class="btn-label">Edit</span>
                    </button>
                    <button class="btn btn-sm btn-delete" @onclick="() => DeleteAction(action.Id!)" title="Delete this action permanently">
                        <span class="bi bi-trash"></span>
                        <span class="btn-label">Delete</span>
                    </button>
                </div>
            </div>
        }
    </div>
}

@if (showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);" @onclick="CloseModal">
        <div class="modal-dialog modal-xl" @onclick:stopPropagation="true">
            <div class="modal-content custom-modal">
                <div class="modal-header">
                    <h5 class="modal-title">@(isEditMode ? "Edit Action" : "Create New Action")</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="currentAction" OnValidSubmit="SaveAction">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Name</label>
                                    <InputText class="form-control" @bind-Value="currentAction.Name" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Description</label>
                                    <InputTextArea class="form-control" rows="3" @bind-Value="currentAction.Description" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Icon (emoji)</label>
                                    <InputText class="form-control" @bind-Value="currentAction.Icon" placeholder="??" />
                                    <small class="text-muted">Enter an emoji to represent this action</small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Action Image (Optional)</label>
                                    <InputFile class="form-control" OnChange="HandleImageUpload" accept="image/*" />
                                    @if (isUploading)
                                    {
                                        <small class="text-muted">Uploading image...</small>
                                    }
                                    @if (!string.IsNullOrEmpty(currentAction.ImageData))
                                    {
                                        <div class="mt-2">
                                            <img src="@GetImageDataUrl(currentAction.ImageData, currentAction.ImageContentType)" alt="Preview" style="max-width: 150px; max-height: 150px; border-radius: 8px;" />
                                        </div>
                                    }
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Category</label>
                                    <InputSelect class="form-select" @bind-Value="currentAction.Category">
                                        @foreach (ActionCategory category in Enum.GetValues(typeof(ActionCategory)))
                                        {
                                            <option value="@category">@category</option>
                                        }
                                    </InputSelect>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Cooldown (hours)</label>
                                    <InputNumber class="form-control" @bind-Value="currentAction.CooldownHours" min="0" />
                                    <small class="text-muted">How long before this action can be performed again (0 for no cooldown)</small>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <h6 class="mb-3">Buffs to Activate</h6>
                                <p class="text-muted small">Select which buffs should be activated when this action is performed.</p>
                                
                                @if (isLoadingBuffs)
                                {
                                    <p><em>Loading buffs...</em></p>
                                }
                                else if (availableBuffs.Any())
                                {
                                    <div class="buff-selection-list">
                                        @foreach (var buff in availableBuffs)
                                        {
                                            var isSelected = currentAction.BuffIds.Contains(buff.Id!);
                                            <div class="buff-selection-item @(isSelected ? "selected" : "")" @onclick="() => ToggleBuff(buff.Id!)">
                                                <input type="checkbox" checked="@isSelected" @onclick:stopPropagation="true" @onchange="() => ToggleBuff(buff.Id!)" />
                                                <div class="buff-selection-info">
                                                    <div class="buff-selection-name">@buff.Name</div>
                                                    <div class="buff-selection-type">
                                                        <span class="badge @(buff.IsDebuff ? "bg-danger" : "bg-success")">
                                                            @(buff.IsDebuff ? "Debuff" : "Buff")
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-warning">
                                        No buffs available. Create some buffs first!
                                    </div>
                                }

                                @if (currentAction.BuffIds.Any())
                                {
                                    <div class="mt-3">
                                        <strong>Selected Buffs (@currentAction.BuffIds.Count):</strong>
                                        <ul class="selected-buffs-list">
                                            @foreach (var buffId in currentAction.BuffIds)
                                            {
                                                var buff = availableBuffs.FirstOrDefault(b => b.Id == buffId);
                                                if (buff != null)
                                                {
                                                    <li>@buff.Name</li>
                                                }
                                            }
                                        </ul>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                            <button type="submit" class="btn btn-primary" disabled="@isUploading">
                                @(isEditMode ? "Update" : "Create") Action
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
        @errorMessage
        <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
    </div>
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        @successMessage
        <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
    </div>
}

