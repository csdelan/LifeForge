@code {
    private List<ActionDto> actions = new();
    private List<BuffDto> availableBuffs = new();
    private ActionDto currentAction = new();
    private bool showModal = false;
    private bool isEditMode = false;
    private bool isLoading = true;
    private bool isLoadingBuffs = true;
    private bool isUploading = false;
    private string? errorMessage;
    private string? successMessage;
    private DotNetObjectReference<Actions>? objRef;

    protected override async Task OnInitializedAsync()
    {
        await LoadActions();
        await LoadBuffs();
        objRef = DotNetObjectReference.Create(this);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (showModal && objRef != null)
        {
            await JSRuntime.InvokeVoidAsync("window.addEscapeKeyListener", objRef);
        }
        else if (!showModal && objRef != null)
        {
            await JSRuntime.InvokeVoidAsync("window.removeEscapeKeyListener");
        }
    }

    [JSInvokable]
    public void HandleEscapeKey()
    {
        CloseModal();
        StateHasChanged();
    }

    private async Task LoadActions()
    {
        try
        {
            isLoading = true;
            actions = await ActionService.GetAllActionsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load actions: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadBuffs()
    {
        try
        {
            isLoadingBuffs = true;
            availableBuffs = await BuffService.GetAllBuffsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load buffs: {ex.Message}";
        }
        finally
        {
            isLoadingBuffs = false;
        }
    }

    private void ShowCreateModal()
    {
        currentAction = new ActionDto
        {
            Category = ActionCategory.Other,
            CooldownHours = 0,
            BuffIds = new List<string>()
        };
        isEditMode = false;
        showModal = true;
        errorMessage = null;
        successMessage = null;
    }

    private void ShowEditModal(ActionDto action)
    {
        currentAction = new ActionDto
        {
            Id = action.Id,
            Name = action.Name,
            Description = action.Description,
            Icon = action.Icon,
            ImageName = action.ImageName,
            ImageData = action.ImageData,
            ImageContentType = action.ImageContentType,
            BuffIds = new List<string>(action.BuffIds),
            Category = action.Category,
            CooldownHours = action.CooldownHours
        };
        isEditMode = true;
        showModal = true;
        errorMessage = null;
        successMessage = null;
    }

    private void CloseModal()
    {
        showModal = false;
        currentAction = new();
    }

    private async Task HandleImageUpload(InputFileChangeEventArgs e)
    {
        try
        {
            isUploading = true;
            var file = e.File;
            var uploadResult = await ActionService.UploadImageAsync(file);
            if (uploadResult != null)
            {
                currentAction.ImageName = uploadResult.FileName;
                currentAction.ImageData = uploadResult.ImageData;
                currentAction.ImageContentType = uploadResult.ContentType;
            }
            else
            {
                errorMessage = "Failed to upload image";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error uploading image: {ex.Message}";
        }
        finally
        {
            isUploading = false;
        }
    }

    private void ToggleBuff(string buffId)
    {
        if (currentAction.BuffIds.Contains(buffId))
        {
            currentAction.BuffIds.Remove(buffId);
        }
        else
        {
            currentAction.BuffIds.Add(buffId);
        }
    }

    private async Task SaveAction()
    {
        try
        {
            if (isEditMode)
            {
                var success = await ActionService.UpdateActionAsync(currentAction.Id!, currentAction);
                if (success)
                {
                    successMessage = "Action updated successfully!";
                    await LoadActions();
                    CloseModal();
                }
                else
                {
                    errorMessage = "Failed to update action";
                }
            }
            else
            {
                var created = await ActionService.CreateActionAsync(currentAction);
                if (created != null)
                {
                    successMessage = "Action created successfully!";
                    await LoadActions();
                    CloseModal();
                }
                else
                {
                    errorMessage = "Failed to create action";
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving action: {ex.Message}";
        }
    }

    private async Task DeleteAction(string id)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this action?"))
        {
            return;
        }

        try
        {
            var success = await ActionService.DeleteActionAsync(id);
            if (success)
            {
                successMessage = "Action deleted successfully!";
                await LoadActions();
            }
            else
            {
                errorMessage = "Failed to delete action";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting action: {ex.Message}";
        }
    }

    private async Task ExecuteAction(ActionDto action)
    {
        try
        {
            var characters = await CharacterService.GetAllCharactersAsync();
            var character = characters.FirstOrDefault();

            if (character == null)
            {
                errorMessage = "No character found. Please create a character first.";
                return;
            }

            var result = await ActionService.PerformActionAsync(character.Id!, action.Id!);
            
            if (result != null && result.Success)
            {
                successMessage = $"Action '{action.Name}' executed successfully! {result.ActivatedBuffs.Count} buff(s) activated.";
            }
            else
            {
                errorMessage = result?.ErrorMessage ?? "Failed to execute action";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error executing action: {ex.Message}";
        }
    }

    private string GetImageDataUrl(string? imageData, string? contentType)
    {
        if (string.IsNullOrEmpty(imageData))
            return string.Empty;
        
        var mimeType = !string.IsNullOrEmpty(contentType) ? contentType : "image/jpeg";
        return $"data:{mimeType};base64,{imageData}";
    }

    public async ValueTask DisposeAsync()
    {
        if (objRef != null)
        {
            await JSRuntime.InvokeVoidAsync("window.removeEscapeKeyListener");
            objRef.Dispose();
        }
    }
}
