@code {
    private List<BuffDto> buffs = new();
    private BuffDto currentBuff = new();
    private bool showModal = false;
    private bool isEditMode = false;
    private bool isLoading = true;
    private bool isUploading = false;
    private string? errorMessage;
    private string? successMessage;
    private DotNetObjectReference<Buffs>? objRef;

    protected override async Task OnInitializedAsync()
    {
        await LoadBuffs();
        objRef = DotNetObjectReference.Create(this);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (showModal && objRef != null)
        {
            await JSRuntime.InvokeVoidAsync("window.addEscapeKeyListener", objRef);
        }
        else if (!showModal && objRef != null)
        {
            await JSRuntime.InvokeVoidAsync("window.removeEscapeKeyListener");
        }
    }

    [JSInvokable]
    public void HandleEscapeKey()
    {
        CloseModal();
        StateHasChanged();
    }

    private async Task LoadBuffs()
    {
        try
        {
            isLoading = true;
            buffs = await BuffService.GetAllBuffsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load buffs: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowCreateModal()
    {
        currentBuff = new BuffDto
        {
            Trigger = BuffTrigger.Manual,
            MaxStacks = 1,
            DurationDays = 7
        };
        isEditMode = false;
        showModal = true;
        errorMessage = null;
        successMessage = null;
    }

    private void ShowEditModal(BuffDto buff)
    {
        currentBuff = new BuffDto
        {
            Id = buff.Id,
            ImageName = buff.ImageName,
            ImageData = buff.ImageData,
            ImageContentType = buff.ImageContentType,
            IsDebuff = buff.IsDebuff,
            Name = buff.Name,
            Trigger = buff.Trigger,
            MaxStacks = buff.MaxStacks,
            Description = buff.Description,
            HPModifier = buff.HPModifier,
            HPMaxModifier = buff.HPMaxModifier,
            HPPercentModifier = buff.HPPercentModifier,
            HPMaxPercentModifier = buff.HPMaxPercentModifier,
            MPModifier = buff.MPModifier,
            MPMaxModifier = buff.MPMaxModifier,
            MPPercentModifier = buff.MPPercentModifier,
            MPMaxPercentModifier = buff.MPMaxPercentModifier,
            XpGainsPercentModifier = buff.XpGainsPercentModifier,
            DurationDays = buff.DurationDays
        };
        isEditMode = true;
        showModal = true;
        errorMessage = null;
        successMessage = null;
    }

    private void CloseModal()
    {
        showModal = false;
        currentBuff = new();
    }

    private async Task HandleImageUpload(InputFileChangeEventArgs e)
    {
        try
        {
            isUploading = true;
            var file = e.File;
            var uploadResult = await BuffService.UploadImageAsync(file);
            if (uploadResult != null)
            {
                currentBuff.ImageName = uploadResult.FileName;
                currentBuff.ImageData = uploadResult.ImageData;
                currentBuff.ImageContentType = uploadResult.ContentType;
            }
            else
            {
                errorMessage = "Failed to upload image";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error uploading image: {ex.Message}";
        }
        finally
        {
            isUploading = false;
        }
    }

    private async Task SaveBuff()
    {
        try
        {
            if (isEditMode)
            {
                var success = await BuffService.UpdateBuffAsync(currentBuff.Id!, currentBuff);
                if (success)
                {
                    successMessage = "Buff updated successfully!";
                    await LoadBuffs();
                    CloseModal();
                }
                else
                {
                    errorMessage = "Failed to update buff";
                }
            }
            else
            {
                var created = await BuffService.CreateBuffAsync(currentBuff);
                if (created != null)
                {
                    successMessage = "Buff created successfully!";
                    await LoadBuffs();
                    CloseModal();
                }
                else
                {
                    errorMessage = "Failed to create buff";
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving buff: {ex.Message}";
        }
    }

    private async Task DeleteBuff(string id)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this buff?"))
        {
            return;
        }

        try
        {
            var success = await BuffService.DeleteBuffAsync(id);
            if (success)
            {
                successMessage = "Buff deleted successfully!";
                await LoadBuffs();
            }
            else
            {
                errorMessage = "Failed to delete buff";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting buff: {ex.Message}";
        }
    }

    private async Task ActivateBuff(BuffDto buff)
    {
        try
        {
            // Get the character (assuming single character for now)
            var characters = await CharacterService.GetAllCharactersAsync();
            var character = characters.FirstOrDefault();

            if (character == null)
            {
                errorMessage = "No character found. Please create a character first.";
                return;
            }

            var result = await BuffInstanceService.ActivateBuffAsync(character.Id!, buff.Id!);
            
            if (result != null && result.Success)
            {
                var modifiersText = result.ModifiersApplied.Any() 
                    ? " Applied: " + string.Join(", ", result.ModifiersApplied.Select(m => $"{m.Key} {(m.Value > 0 ? "+" : "")}{m.Value}"))
                    : "";
                successMessage = $"Buff '{buff.Name}' activated!{modifiersText}";
            }
            else
            {
                errorMessage = result?.ErrorMessage ?? "Failed to activate buff";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error activating buff: {ex.Message}";
        }
    }

    private string GetImageDataUrl(string? imageData, string? contentType)
    {
        if (string.IsNullOrEmpty(imageData))
            return string.Empty;
        
        var mimeType = !string.IsNullOrEmpty(contentType) ? contentType : "image/jpeg";
        return $"data:{mimeType};base64,{imageData}";
    }

    private bool HasModifiers(BuffDto buff)
    {
        return buff.HPModifier != 0 || buff.HPMaxModifier != 0 || buff.HPPercentModifier != 0 ||
               buff.HPMaxPercentModifier != 0 || buff.MPModifier != 0 || buff.MPMaxModifier != 0 ||
               buff.MPPercentModifier != 0 || buff.MPMaxPercentModifier != 0 || buff.XpGainsPercentModifier != 0;
    }

    private string FormatModifier(int value)
    {
        return value > 0 ? $"+{value}" : value.ToString();
    }

    private string GetModifierClass(int value)
    {
        return value > 0 ? "positive" : value < 0 ? "negative" : "";
    }

    private string FormatDuration(int durationDays)
    {
        return durationDays == 1 ? "1 day" : $"{durationDays} days";
    }

    public async ValueTask DisposeAsync()
    {
        if (objRef != null)
        {
            await JSRuntime.InvokeVoidAsync("window.removeEscapeKeyListener");
            objRef.Dispose();
        }
    }
