@page "/buffs"
@using LifeForge.Web.Models
@using LifeForge.Web.Services
@using LifeForge.Domain
@inject BuffService BuffService
@inject BuffInstanceService BuffInstanceService
@inject CharacterService CharacterService
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable

<PageTitle>Buff Manager</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Buff Manager</h1>
    <button class="btn btn-primary" @onclick="ShowCreateModal">
        <span class="bi bi-plus-circle"></span> Create New Buff
    </button>
</div>

@if (isLoading)
{
    <p><em>Loading buffs...</em></p>
}
else if (buffs == null || !buffs.Any())
{
    <div class="alert alert-info">
        No buffs available. Create your first buff to get started!
    </div>
}
else
{
    <div class="buff-gallery">
        @foreach (var buff in buffs)
        {
            <div class="buff-card @(buff.IsDebuff ? "debuff-card" : "")" @onclick="() => ShowEditModal(buff)">
                <div class="buff-card-image">
                    @if (!string.IsNullOrEmpty(buff.ImageData))
                    {
                        <img src="@GetImageDataUrl(buff.ImageData, buff.ImageContentType)" alt="@buff.Name" />
                    }
                    else
                    {
                        <div class="buff-card-placeholder">
                            <span class="bi @(buff.IsDebuff ? "bi-arrow-down-circle" : "bi-arrow-up-circle")"></span>
                        </div>
                    }
                </div>
                <div class="buff-card-content">
                    <h3 class="buff-card-title">@buff.Name</h3>
                    <p class="buff-card-description">@(string.IsNullOrEmpty(buff.Description) ? "No description" : buff.Description)</p>
                    @if (HasModifiers(buff))
                    {
                        <div class="buff-modifiers-preview">
                            <small class="text-muted">Modifiers:</small>
                            <div class="modifiers-preview-list">
                                @if (buff.HPModifier != 0)
                                {
                                    <span class="modifier-badge @GetModifierClass(buff.HPModifier)">HP @FormatModifier(buff.HPModifier)</span>
                                }
                                @if (buff.HPMaxModifier != 0)
                                {
                                    <span class="modifier-badge @GetModifierClass(buff.HPMaxModifier)">HP Max @FormatModifier(buff.HPMaxModifier)</span>
                                }
                                @if (buff.HPPercentModifier != 0)
                                {
                                    <span class="modifier-badge @GetModifierClass(buff.HPPercentModifier)">HP @FormatModifier(buff.HPPercentModifier)%</span>
                                }
                                @if (buff.HPMaxPercentModifier != 0)
                                {
                                    <span class="modifier-badge @GetModifierClass(buff.HPMaxPercentModifier)">HP Max @FormatModifier(buff.HPMaxPercentModifier)%</span>
                                }
                                @if (buff.MPModifier != 0)
                                {
                                    <span class="modifier-badge @GetModifierClass(buff.MPModifier)">MP @FormatModifier(buff.MPModifier)</span>
                                }
                                @if (buff.MPMaxModifier != 0)
                                {
                                    <span class="modifier-badge @GetModifierClass(buff.MPMaxModifier)">MP Max @FormatModifier(buff.MPMaxModifier)</span>
                                }
                                @if (buff.MPPercentModifier != 0)
                                {
                                    <span class="modifier-badge @GetModifierClass(buff.MPPercentModifier)">MP @FormatModifier(buff.MPPercentModifier)%</span>
                                }
                                @if (buff.MPMaxPercentModifier != 0)
                                {
                                    <span class="modifier-badge @GetModifierClass(buff.MPMaxPercentModifier)">MP Max @FormatModifier(buff.MPMaxPercentModifier)%</span>
                                }
                                @if (buff.XpGainsPercentModifier != 0)
                                {
                                    <span class="modifier-badge @GetModifierClass(buff.XpGainsPercentModifier)">XP @FormatModifier(buff.XpGainsPercentModifier)%</span>
                                }
                            </div>
                        </div>
                    }
                    <div class="buff-card-footer">
                        <span class="badge @(buff.IsDebuff ? "bg-danger" : "bg-success")">
                            @(buff.IsDebuff ? "Debuff" : "Buff")
                        </span>
                        <span class="buff-duration">
                            <span class="bi bi-clock"></span> @FormatDuration(buff.DurationDays)
                        </span>
                        @if (buff.MaxStacks > 1)
                        {
                            <span class="buff-stacks">
                                <span class="bi bi-stack"></span> x@(buff.MaxStacks)
                            </span>
                        }
                    </div>
                </div>
                <div class="buff-card-actions" @onclick:stopPropagation="true">
                    @if (buff.Trigger == BuffTrigger.Manual)
                    {
                        <button class="btn btn-sm btn-activate" @onclick="() => ActivateBuff(buff)" title="Activate this buff on your character">
                            <span class="bi bi-play-fill"></span>
                            <span class="btn-label">Activate</span>
                        </button>
                    }
                    <button class="btn btn-sm btn-edit" @onclick="() => ShowEditModal(buff)" title="Edit buff settings">
                        <span class="bi bi-pencil"></span>
                        <span class="btn-label">Edit</span>
                    </button>
                    <button class="btn btn-sm btn-delete" @onclick="() => DeleteBuff(buff.Id!)" title="Delete this buff permanently">
                        <span class="bi bi-trash"></span>
                        <span class="btn-label">Delete</span>
                    </button>
                </div>
            </div>
        }
    </div>
}

@if (showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);" @onclick="CloseModal">
        <div class="modal-dialog modal-xl" @onclick:stopPropagation="true">
            <div class="modal-content custom-modal">
                <div class="modal-header">
                    <h5 class="modal-title">@(isEditMode ? "Edit Buff" : "Create New Buff")</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="currentBuff" OnValidSubmit="SaveBuff">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Name</label>
                                    <InputText class="form-control" @bind-Value="currentBuff.Name" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Description</label>
                                    <InputTextArea class="form-control" rows="3" @bind-Value="currentBuff.Description" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Type</label>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="buffType" id="buffTypePositive" checked="@(!currentBuff.IsDebuff)" @onchange="() => currentBuff.IsDebuff = false">
                                        <label class="form-check-label" for="buffTypePositive">
                                            Buff (Positive Effect)
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="buffType" id="buffTypeNegative" checked="@currentBuff.IsDebuff" @onchange="() => currentBuff.IsDebuff = true">
                                        <label class="form-check-label" for="buffTypeNegative">
                                            Debuff (Negative Effect)
                                        </label>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Trigger</label>
                                    <InputSelect class="form-select" @bind-Value="currentBuff.Trigger">
                                        @foreach (BuffTrigger trigger in Enum.GetValues(typeof(BuffTrigger)))
                                        {
                                            <option value="@trigger">@trigger</option>
                                        }
                                    </InputSelect>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Max Stacks</label>
                                    <InputNumber class="form-control" @bind-Value="currentBuff.MaxStacks" min="1" />
                                    <small class="text-muted">Maximum number of times this buff can stack</small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Duration (days)</label>
                                    <InputNumber class="form-control" @bind-Value="currentBuff.DurationDays" min="1" />
                                    <small class="text-muted">How long the buff lasts in days</small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Buff Image</label>
                                    <InputFile class="form-control" OnChange="HandleImageUpload" accept="image/*" />
                                    @if (isUploading)
                                    {
                                        <small class="text-muted">Uploading image...</small>
                                    }
                                    @if (!string.IsNullOrEmpty(currentBuff.ImageData))
                                    {
                                        <div class="mt-2">
                                            <img src="@GetImageDataUrl(currentBuff.ImageData, currentBuff.ImageContentType)" alt="Preview" style="max-width: 150px; max-height: 150px; border-radius: 8px;" />
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="col-md-6">
                                <h6 class="mb-3">Stat Modifiers</h6>
                                <p class="text-muted small">Configure how this buff affects character stats. Use positive numbers for buffs and negative for debuffs.</p>
                                
                                <div class="row mb-3">
                                    <div class="col-6">
                                        <label class="form-label">HP Modifier</label>
                                        <InputNumber class="form-control" @bind-Value="currentBuff.HPModifier" />
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label">HP %</label>
                                        <InputNumber class="form-control" @bind-Value="currentBuff.HPPercentModifier" />
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-6">
                                        <label class="form-label">HP Max Modifier</label>
                                        <InputNumber class="form-control" @bind-Value="currentBuff.HPMaxModifier" />
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label">HP Max %</label>
                                        <InputNumber class="form-control" @bind-Value="currentBuff.HPMaxPercentModifier" />
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-6">
                                        <label class="form-label">MP Modifier</label>
                                        <InputNumber class="form-control" @bind-Value="currentBuff.MPModifier" />
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label">MP %</label>
                                        <InputNumber class="form-control" @bind-Value="currentBuff.MPPercentModifier" />
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-6">
                                        <label class="form-label">MP Max Modifier</label>
                                        <InputNumber class="form-control" @bind-Value="currentBuff.MPMaxModifier" />
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label">MP Max %</label>
                                        <InputNumber class="form-control" @bind-Value="currentBuff.MPMaxPercentModifier" />
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">XP Gains % Modifier</label>
                                    <InputNumber class="form-control" @bind-Value="currentBuff.XpGainsPercentModifier" />
                                    <small class="text-muted">Percentage boost/reduction to XP gains</small>
                                </div>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                            <button type="submit" class="btn btn-primary" disabled="@isUploading">
                                @(isEditMode ? "Update" : "Create") Buff
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
        @errorMessage
        <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
    </div>
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        @successMessage
        <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
    </div>
}

